page {
    background-color: #69696921
}

.container {
    font-size: 14px;
    line-height: 24px;
    position: relative
}

/* 天气start */
.container .weather .item {
    background-color: #fff;
    margin: 14rpx;
    border-radius: 10rpx;
    padding: 0 30rpx 30rpx 30rpx
}

.container .weather .item .top {
    height: 116rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
    justify-content: space-between
}

.container .weather .item .top .left {
    height: 116rpx;
    width: 400rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
    justify-content: space-between
}

.container .weather .item .top .left .content {
    width: 100%
}

.container .weather .item .top .left .icon {
    display: inline-block;
    vertical-align: bottom;
    width: 52rpx;
    height: auto
}

.container .weather .item .top .left .name {
    text-align: left;
    display: inline-block;
    vertical-align: bottom;
    font-size: 34rpx;
    color: #000;
    line-height: 50rpx;
    font-weight: 700;
    margin-left: 15rpx
}

.container .weather .item .top .left .text {
    width: 150rpx;
    height: 38rpx;
    line-height: 38rpx;
    text-align: center;
    font-size: 24rpx;
    color: #61300e;
    background: -webkit-linear-gradient(left, #f9db8d, #f8d98a);
    background: linear-gradient(90deg, #f9db8d, #f8d98a);
    border-radius: 6rpx
}

.container .weather .item .top .right {
    width: 170rpx;
    height: 60rpx;
    border-radius: 30rpx;
    background: -webkit-linear-gradient(left, #ec6f43, #ea4a36);
    background: linear-gradient(90deg, #ec6f43, #ea4a36);
    color: #fff;
    font-size: 28rpx;
    line-height: 60rpx;
    text-align: center
}

.container .weather .item .bottom {
    height: auto;
    width: 100%
}

.container .weather .item .bottom image {
    display: block;
    width: 100%;
    height: auto
}
/* 天气end */

/* 浮动按钮start */
.round-area {
    height: 230rpx;
    width: 110rpx;
    position: fixed;
    bottom: 140rpx;
    right: 1rpx;
}

.round-area .round-button {
    padding: 14rpx 2rpx;
    margin: 0;
    z-index: 999;
    font-size: 28rpx;
    width: 100rpx;
    height: 100rpx;
    background-color: #3A9CED;
    color: #fff;
    border-radius: 10%;
    font-weight: 400;
    margin-top: 10rpx;
}
/* 悬浮按钮end */

/* 功能按钮start */
.main-core {
    margin: 14rpx;
    display: flex;
    flex-flow: row wrap;
    align-content: center;
    background-color: #fff;
    border-radius: 10rpx;
    min-height: 230rpx;
    overflow: hidden;
    padding: 10rpx 0 30rpx 0;
}

.main-core-item {
    display: flex;
    flex-flow: column wrap;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
    width: 33%;
    height: 230rpx;
}

.core-item-icon {
    display: block;
    width: 120rpx;
    height: 120rpx;
    margin: 15rpx auto;
}

.core-item-name {
    display: block;
    margin: 5rpx;
}

/* 功能按钮end */

/* 公众号start */
.offical-account {
    position: fixed;
    bottom: 20rpx;
    width: 100%;
    height: 85px;
    margin-top: 70rpx;
}

